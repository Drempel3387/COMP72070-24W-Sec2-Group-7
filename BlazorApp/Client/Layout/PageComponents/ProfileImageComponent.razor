<img src = "@ImageUrl" class = "contact-img"/>

@code {
    [Parameter]
    public string ImageUrl { get; set; }

    [Parameter]
    public string Size { get; set; } = "50px"; //Default size set to 50px, but can be overridden
}
<style>
    .contact-img {
        width: @Size;
        height: @Size;
        border-radius: 50%;
    }
</style>
