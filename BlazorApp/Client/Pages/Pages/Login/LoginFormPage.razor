@page "/login"
@inject NavigationManager NavigationManager

@using BlazorApp.Shared
@using BlazorApp.Client.Pages.PageComponents

<TitleComponent Title="Conestoga Connects" Level="1" />

<EditForm Model="@loginForm" OnValidSubmit="HandleLogin">
    <TitleComponent Title="Login" Level="3"/>
    
    <TextInputComponent Label="Username" Placeholder="Username" @bind-value="loginForm.Username" />
    <TextInputComponent Label="Password" Placeholder="Password" Type="password" @bind-value="loginForm.Password" />

    <ButtonComponent Text="Login" Type="submit"/>
</EditForm>

<LinkComponent Href="#" Text="Forgot Password?" AriaLabel="Forgot password link" />
<LinkComponent Href="/sign-up" Text="Sign-Up" AriaLabel="Sign up link" />

@code {
    private LoginFormModel loginForm = new LoginFormModel();
    private void HandleLogin()
    {
        NavigationManager.NavigateTo("/home");//redirect to home page -- not implemented yet
    }
}

