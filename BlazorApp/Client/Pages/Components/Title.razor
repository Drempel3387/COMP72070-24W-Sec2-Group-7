@using Microsoft.AspNetCore.Components

@if (!string.IsNullOrWhiteSpace(title))
{
    <h@Level>@title</h@Level> // Use the Level property to determine the heading level "h1, h2, h3, etc"
}

@code {
    [Parameter]
    public string title { get; set; }

    private int _level = 1; // Default to h1

    [Parameter]
    public int Level
    {
        get => _level;
        set => _level = (value < 1 || value > 6) ? 1 : value; // Ensure the heading level is between 1 and 6
    }
}
