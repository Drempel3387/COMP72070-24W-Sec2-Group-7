@using Microsoft.AspNetCore.Components

@if (!string.IsNullOrWhiteSpace(Title))
{
    @switch (Level)
    {
        case 1:
            <h1>@Title</h1>
            break;
        case 2:
            <h2>@Title</h2>
            break;
        case 3:
            <h3>@Title</h3>
            break;
        case 4:
            <h4>@Title</h4>
            break;
        case 5:
            <h5>@Title</h5>
            break;
        case 6:
            <h6>@Title</h6>
            break;
        default:
            <h1>@Title</h1>
            break;
    }
}

@code {
    [Parameter]
    public string Title { get; set; } = string.Empty;

    private int _level = 1; //Default to h1

    [Parameter]
    public int Level
    {
        get => _level;
        set => _level = (value < 1 || value > 6) ? 1 : value; //Ensure the heading level is between 1 and 6
    }
}

